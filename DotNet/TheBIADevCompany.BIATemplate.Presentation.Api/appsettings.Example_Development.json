{
  "ConnectionStrings": {
    "BIATemplateDatabase": "data source=localhost;initial catalog=BIATemplate;integrated security=True;MultipleActiveResultSets=True;Encrypt=False;App=BIATemplate"
  },
  "DBEngine": {
    "BIATemplateDatabase": "SQLServer" //SQLServer or PostgreSQL
  },
  "SQLDataBroker": {
    "BIATemplateDatabase": "true"
  },
  "EntityModelStateValidation": true,
  "DatabaseConfigurations": [
    {
      "Key": "BIATemplateDatabase",
      "Provider": "SQLServer",
      "ConnectionString": "data source=localhost;initial catalog=BIATemplate;integrated security=True;MultipleActiveResultSets=True;Encrypt=False;App=BIATemplate"
    },
    {
      "Key": "BIATemplateDatabaseReadOnly",
      "Provider": "SQLServer",
      "ConnectionString": "data source=localhost;initial catalog=BIATemplateReadOnly;integrated security=True;MultipleActiveResultSets=True;Encrypt=False;App=BIATemplate"
    }
  ],
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information",
      "Microsoft.AspNetCore.SignalR": "Debug",
      "Microsoft.AspNetCore.Http.Connections": "Debug"
    }
  },
  "NLog": {
    "targets": {
      "fileLog": {
        "fileName": "C:\\Logs\\BIATemplate\\${shortdate}_TheBIADevCompany.BIATemplate_Api.log"
      }
    },
    "rules": [
      {
        "logger": "Microsoft.EntityFrameworkCore.*",
        "finalMinLevel": "Info"
      },
      {
        "logger": "*",
        "minlevel": "Info",
        "writeTo": "fileLog"
      }
    ]
  }
}