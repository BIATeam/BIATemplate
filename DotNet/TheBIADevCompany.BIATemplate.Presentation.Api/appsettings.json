{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "System": "Warning",
      "Microsoft": "Warning"
    }
  },
  "Project": {
    "Name": "BIATemplate",
    "ShortName": "BIATemplate"
  },
  "AllowedHosts": "*",
  "NLog": {
    "autoReload": true,
    "internalLogLevel": "Error",
    "internalLogFile": "${basedir}/Logs/internal-nlog.txt",
    "extensions": [
      { "assembly": "NLog.Extensions.Logging" },
      { "assembly": "NLog.Web.AspNetCore" },
      { "assembly": "NLog.MailKit" }
    ],
    "targets": {
      "fileLog": {
        "type": "File",
        "fileName": "E:\\Logs\\BIATemplate\\${shortdate}_TheBIADevCompany.BIATemplate_Api.log",
        "archiveAboveSize": 10000000,
        "archiveNumbering": "Rolling",
        "archiveEvery": "Day",
        "maxArchiveFiles": 60,
        "layout": "${longdate}|${uppercase:${level}}|${aspnet-traceidentifier}|${message} ${exception:format=tostring}"
      },
      "mailLog": {
        "condition": "level >= LogLevel.Error",
        "flushOnConditionOnly": true,
        "type": "Mail",
        "layout": "${longdate}|${uppercase:${level}}|${aspnet-traceidentifier}|${message} ${exception:format=tostring}",
        "addNewLines": true,
        "subject": "[BIATemplate] ERROR",
        "from": "noreply-BIATemplate@TheBIADevCompany.com",
        "smtpServer": "smtp",
        "to": "test@mail.com"
      }
    },
    "rules": [
      {
        "logger": "Microsoft.EntityFrameworkCore.*",
        "finalMinLevel": "Warn"
      },
      {
        "logger": "*",
        "minlevel": "Info",
        "writeTo": "fileLog"
      }
      //{
      //  "logger": "error.mail",
      //  "minlevel": "Error",
      //  "writeTo": "mailLog"
      //}
    ]
  }
}